<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diorous.lightnovel.View.TrangChu.MainActivity"
    >

    <LinearLayout
        android:id="@+id/lineartrangchu"
        android:layout_width="match_parent"
        android:layout_height="604dp"
        android:orientation="vertical"
        >
            <android.support.v4.view.ViewPager
                android:id="@+id/trangchuviewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>
    </LinearLayout>
    <android.support.design.widget.BottomNavigationView
        android:layout_below="@+id/lineartrangchu"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:id="@+id/navigation_trangchu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/custom_itemcolor_navigation"
        app:itemTextColor="@color/custom_itemcolor_navigation"
        app:menu="@menu/navigation_trangchu" />
</RelativeLayout>

