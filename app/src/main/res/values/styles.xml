<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <declare-styleable name="CustomEdittextClear" >
        <attr name="validateEmail" format="boolean"/>
        <attr name="validateText" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="CustomVisibleEdittext">
        <attr name="validatePassword" format="boolean"/>
    </declare-styleable>
</resources>
